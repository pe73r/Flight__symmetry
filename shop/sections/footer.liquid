<div data-section-type="footer">
  {% if linklists[section.settings.menu_linklist].links.size > 0 %}
     {% include 'nav-row' %}
  {% endif %}
  {% if linklists[section.settings.menu_linklist_2].links.size > 0 %}
     {% include 'nav-row-2' %} 
  {% endif %}

  <div class="lower cf">
    {% if section.settings.show_social_icons %}
    {% include 'social-icons' %}
    {% endif %}

    {% if section.settings.signup_show %}
    <div class="interact">
      <div class="signup-form-title">{{ section.settings.newsletter_title }}</div>
      <div class="signup-form-subtitle user-content">{{ section.settings.newsletter_text }}</div>
      {% include 'signup-form', custom_form_id: 'footer_signup' %}
    </div><!-- /.interact -->
    {% endif %}

    <div class="copyright">
      <span class="copy">&copy; {{ "now" | date: "%Y" }} {{ shop.name | link_to: '/' }}.</span>

      {{ powered_by_link }}

    </div><!-- /.copyright -->

    <div class="payment-methods">
      {% for type in shop.enabled_payment_types %}
        {{ type | payment_type_svg_tag: class:'payment-icon' }}
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "link_list",
        "id": "menu_linklist",
        "label": "Menu",
        "default": "footer"
      },
      {
        "type": "link_list",
        "id": "menu_linklist_2",
        "label": "Menu", 
        "default": "footer"  
      }, 
      {
        "type": "checkbox",
        "id": "show_social_icons",
        "label": "Show social icons",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "signup_show",
        "label": "Show newsletter signup",
        "default": true
      },
      {
        "type": "text",
        "id": "newsletter_title",
        "label": "Heading",
        "default": "Signup for our newsletter"
      },
      {
        "type": "richtext",
        "id": "newsletter_text",
        "label": "Subheading"
      }
    ]
  }
{% endschema %}
